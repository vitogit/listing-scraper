<div class="page-header">
  <%= link_to new_listing_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Listing
  <% end %>
  <h1>Listings</h1>
</div>

<h2> <%= @page_uri %> </h2>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Img</th>
            <th>Title</th>
            <th>Price</th>
            <th>Gc</th>
            <th>Address</th>
            <th>Phone</th>
            <th>External Id</th>
            <th>Link</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @listings) do |listing| %>
            <td><%= image_tag listing.img %></td>
            <td><%= listing.title %></td>
            <td><%= listing.currency %> <%= listing.price %></td>
            <td><%= listing.gc %></td>
            <td><%= listing.address %></td>
            <td><%= listing.phone %></td>
            <td><%= listing.external_id %></td>
            <td><%= link_to :link, listing.link %></td>
            <td><%= link_to 'Show', listing %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
